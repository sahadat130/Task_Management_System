@page
@model UserModel
@{
    ViewData["Title"] = "User Info";
}
<h1>@ViewData["Title"]</h1>
<script src="~/Script/AuthApp/User.js"></script>
<form ng-controller="UserCtrl">
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" ng-model="UserName" id="idusername">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" ng-model="Password" id="idpassword">
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="text" class="form-control" ng-model="Email" id="idemail">
    </div>
    <div class="form-group">
        <label>Role</label>
        <select type="text" autocomplete="off" class="form-control" id="idRoleID" ng-model="RoleID" ng-options="d.RoleID as d.RoleName for d in RoleList">
            <option value="">--------Select------</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary" ng-click="Save()">{{btnText}}</button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">User Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Role</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in UserList">
                <td>{{item.UserName}}</td>
                <td>{{item.Email}}</td>
                <td>{{item.RoleName}}</td>
                <th><button class="btn btn-danger" ng-click="Edit(item)">Edit</button></th>
            </tr>
        </tbody>
    </table>
</form>
