@page
@model UserModel
@{
    ViewData["Title"] = "Information";
}
<h1>@ViewData["Title"]</h1>
<script src="~/Script/AuthApp/Information.js"></script>
<form name="Info" ng-controller="InformationCtrl">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" ng-model="info.Title" id="idTitle">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" ng-model="info.Description" id="idDescription"></textarea>
    </div>
    <div class="form-group">
        <label>Due Date</label>
        <input type="datetime-local" class="form-control" ng-model="info.DueDate" id="idDueDate">
    </div>
    <div class="form-group">
        <label>Status</label>
        <select type="text" autocomplete="off" class="form-control" id="idStatus" ng-model="info.Status">
            <option value="Complete">Complete</option>
            <option value="Pending">Pending</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary" ng-click="Save(info)">{{btnText}}</button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Due Date</th>
                <th scope="col">Status</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in InformationList">
                <td>{{item.Title}}</td>
                <td>{{item.Description}}</td>
                <td><span ng-bind="item.DueDate | date:'dd-MM-yyyy'"></span></td>
                <td>{{item.Status}}</td>
                <th><button class="btn btn-danger" ng-click="Edit(item)">Edit</button></th>
            </tr>
        </tbody>
    </table>
</form>
